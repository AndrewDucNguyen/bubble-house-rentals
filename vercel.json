{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/assets/(.*)\\.js$",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable",
                "content-type": "application/javascript"
            },
            "continue": true
        },
        {
            "src": "/assets/(.*)\\.css$",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable",
                "content-type": "text/css"
            },
            "continue": true
        },
        {
            "src": "/assets/(.*)\\.(jpg|jpeg|png|gif|svg|ico|webp)$",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "continue": true
        },
        {
            "src": "/assets/(.*)\\.(woff|woff2|ttf|eot)$",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "continue": true
        },
        {
            "src": "/(.*\\.(js|css|jpg|jpeg|png|gif|svg|ico|webp|woff|woff2|ttf|eot))$",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html",
            "headers": {
                "content-type": "text/html"
            }
        }
    ]
}